# Copy to .env and edit appropriately

# Your OpenAI key (must have vision capability for multimodal/4o image tasks)
OPENAI_API_KEY="sk-..."

# Image compression quality (useful range 70-90)
IMG_QUALITY=85

# Which folder contains product folders to process
PARENT_DIR="/full/path/to/your/ebay_folders"

# ENDPOINTS (leave as shown; do not add model name/version in the URL)
AI_SEARCH_ENDPOINT="https://api.openai.com/v1/chat/completions"
AI_DESC_ENDPOINT="https://api.openai.com/v1/chat/completions"
AI_IMAGEQUERY_ENDPOINT="https://api.openai.com/v1/chat/completions"

# MODELS -- tested values shown, change as needed
AI_SEARCH_MODEL="gpt-4o-2024-08-06"
AI_DESC_MODEL="gpt-4.1-2025-04-14"
AI_IMAGEQUERY_MODEL="gpt-4o-2024-08-06"

# OPTIONAL: Set to "1" to always run multimodal/vision descriptions by default
MULTIMODAL_ALWAYS=0
